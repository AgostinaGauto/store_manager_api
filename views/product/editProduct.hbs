<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="mb-4">{{titulo}}</h2>
        
        {{> messages}}

        <div class="card shadow-lg p-4">
            {{! üö® La ruta debe ser POST a /productos/editar/:id y debe llevar enctype üö® }}
            <form action="/productos/editar/{{producto.id}}" method="POST" enctype="multipart/form-data">

                {{! Campo: Nombre del Producto }}
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre del Producto</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="{{producto.nombre}}" required>
                </div>

                {{! Campo: Categor√≠a }}
                <div class="mb-3">
                    <label for="id_categoria" class="form-label">Categor√≠a</label>
                    <select class="form-select" id="id_categoria" name="id_categoria" required>
                        <option value="">Seleccione una Categor√≠a</option>
                        {{#each categorias}}
                            {{! Selecciona la categor√≠a actual del producto }}
                            <option value="{{this.id}}" {{#if (eq ../producto.id_categoria this.id)}}selected{{/if}}>
                                {{this.nombre}}
                            </option>
                        {{/each}}
                    </select>
                </div>

                <div class="row">
                    {{! Campo: Precio }}
                    <div class="col-md-6 mb-3">
                        <label for="precio" class="form-label">Precio ($)</label>
                        <input type="number" step="0.01" min="0.01" class="form-control" id="precio" name="precio" value="{{producto.precio}}" required>
                    </div>

                    {{! Campo: Stock }}
                    <div class="col-md-6 mb-3">
                        <label for="stock" class="form-label">Stock Actual</label>
                        <input type="number" min="0" class="form-control" id="stock" name="stock" value="{{producto.stock}}" required>
                    </div>
                </div>

                {{! Campo: Stock M√≠nimo }}
                <div class="mb-3">
                    <label for="stock_minimo" class="form-label">Stock M√≠nimo</label>
                    <input type="number" min="0" class="form-control" id="stock_minimo" name="stock_minimo" value="{{producto.stock_minimo}}" required>
                    <div class="form-text">Se generar√° una alerta si el stock cae por debajo de este valor.</div>
                </div>

                {{! Campo: Imagen Actual y Carga de Nueva Imagen }}
                <div class="mb-3">
                    <label for="imagen" class="form-label">Cambiar Imagen</label>
                    <input type="file" class="form-control" id="imagen" name="imagen" accept="image/*">
                    <div class="form-text">Deje este campo vac√≠o para conservar la imagen actual.</div>

                    {{#if producto.imagen}}
                        <div class="mt-2">
                            <p>Imagen actual:</p>
                            <img src="/uploads/products/{{producto.imagen}}" 
                                alt="{{producto.nombre}}" 
                                class="img-thumbnail" 
                                style="max-width: 150px; height: auto;">
                        </div>
                    {{/if}}
                </div>
                
                <hr>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/productos" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="bi bi-arrow-up-circle"></i> Actualizar Producto
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>