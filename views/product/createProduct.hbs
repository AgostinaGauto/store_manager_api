<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="mb-4">{{titulo}}</h2>
        
        {{! Parcial para mostrar mensajes flash de error o √©xito }}
        {{> messages}}

        <div class="card shadow-lg p-4">
            {{! üö® Importante: enctype para Multer. La ruta POST es /productos/crear }}
            <form action="/productos/crear" method="POST" enctype="multipart/form-data">

                {{! Campo: Nombre del Producto }}
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre del Producto</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="{{nombre}}" required>
                </div>

                {{! Campo: Categor√≠a (Relaci√≥n 1:N) }}
                <div class="mb-3">
                    <label for="id_categoria" class="form-label">Categor√≠a</label>
                    <select class="form-select" id="id_categoria" name="id_categoria" required>
                        <option value="">Seleccione una Categor√≠a</option>
                        {{! Itera sobre la lista de categor√≠as obtenida del controlador }}
                        {{#each categorias}}
                            <option value="{{this.id}}" {{#if (eq ../id_categoria this.id)}}selected{{/if}}>
                                {{this.nombre}}
                            </option>
                        {{/each}}
                    </select>
                </div>

                <div class="row">
                    {{! Campo: Precio }}
                    <div class="col-md-6 mb-3">
                        <label for="precio" class="form-label">Precio ($)</label>
                        <input type="number" step="0.01" min="0.01" class="form-control" id="precio" name="precio" value="{{precio}}" required>
                    </div>

                    {{! Campo: Stock }}
                    <div class="col-md-6 mb-3">
                        <label for="stock" class="form-label">Stock Actual</label>
                        <input type="number" min="0" class="form-control" id="stock" name="stock" value="{{stock}}" required>
                    </div>
                </div>

                {{! Campo: Stock M√≠nimo }}
                <div class="mb-3">
                    <label for="stock_minimo" class="form-label">Stock M√≠nimo</label>
                    <input type="number" min="0" class="form-control" id="stock_minimo" name="stock_minimo" value="{{stock_minimo}}" required>
                    <div class="form-text">Se generar√° una alerta si el stock cae por debajo de este valor.</div>
                </div>

                {{! Campo: Imagen (Input de tipo file para Multer) }}
                <div class="mb-3">
                    <label for="imagen" class="form-label">Imagen del Producto</label>
                    {{! El atributo "name" debe coincidir con el campo usado en Multer (upload.single('imagen')) }}
                    <input type="file" class="form-control" id="imagen" name="imagen" accept="image/*" required>
                    <div class="form-text">Solo se permiten im√°genes (jpg, jpeg, png). Max 5MB.</div>
                </div>
                
                <hr>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/productos" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Guardar Producto
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>