<div class="row">
    <div class="col-12">
        <h2 class="mb-4">{{titulo}}</h2>
        
        {{> messages}}

        <div class="d-flex justify-content-between mb-3">
            <a href="/categorias/crear" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Nueva Categoría
            </a>
            
            {{! Aquí irá el buscador y paginación en el futuro }}
        </div>

        {{#if categorias}}
        <div class="card shadow">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categorias}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{nombre}}</td>
                            <td class="text-center">
                                <a href="/categorias/editar/{{id}}" class="btn btn-sm btn-info text-white me-2">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <form action="/categorias/eliminar/{{id}}" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Está seguro de eliminar esta categoría?');">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        {{else}}
        <div class="alert alert-info">
            No hay categorías registradas. ¡Crea la primera!
        </div>
        {{/if}}
    </div>
</div>