<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-4">{{titulo}}</h2>

        {{> messages}}
        
        <div class="card shadow-lg p-4">
            {{! IMPORTANTE: El action debe apuntar a la ruta POST de actualización }}
            <form action="/categorias/editar/{{categoria.id}}" method="POST">
                
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre de la Categoría</label>
                    {{! Rellena el campo con el valor actual de la categoría }}
                    <input type="text" class="form-control" id="nombre" name="nombre" value="{{categoria.nombre}}" required>
                    <div class="form-text">El nombre debe ser único.</div>
                </div>
                
                <div class="d-flex justify-content-between mt-4">
                    <a href="/categorias" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="bi bi-arrow-up-circle"></i> Actualizar Categoría
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>